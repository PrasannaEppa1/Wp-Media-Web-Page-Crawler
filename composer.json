{
	"name": "prasannaeppa/wpmedia-web-page-crawler",
    "description": "Crawls home page of a website and shows all internal links",
    "keywords": ["wordpress", "plugin", "webpagecrawler"],
    "license": "This software is NOT to be distributed, but can be INCLUDED in WP themes: Premium or Contracted.",
    "authors": [
      {
        "name": "Prasanna Eppa",
        "email": "prasanna.eppa@gmail.com"
      }
    ],
    "type": "wordpress-plugin",
    
	"config": {
		"sort-packages": true
	},
	"support": {
		"source": "https://github.com/wp-media/package-template"
	},
	"require-dev": {
		"php": "^5.6 || ^7",
		"phpcompatibility/phpcompatibility-wp": "*",
		"brain/monkey": "^2.4",
        "phpunit/phpunit": "^5.6 || ^7",
        "squizlabs/php_codesniffer": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
		"wp-coding-standards/wpcs": "*"
	},
	"autoload": {},
	"autoload-dev": {},
	"scripts": {
		"test-unit": "\"vendor/bin/wpmedia-phpunit\" unit path=Tests/Unit/",
		"test-integration": "\"vendor/bin/wpmedia-phpunit\" integration path=Tests/Integration/",
		"run-tests": [
			"@test-unit",
			"@test-integration"
		],
		"install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
		"phpcs": "phpcs --basepath=.",
		"phpcs-changed": "./bin/phpcs-changed.sh",
		"phpcs:fix": "phpcbf",
		"unit-test": "cd Tests/Unit && phpunit",
		"integration-test": "cd Tests/Integration && phpunit"
	}
}
